header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user 
            a#logOut.nav__el.nav__el--logout Log Out
            a.nav__el(href='#')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            button.nav__el( onclick="window.location.href = '/login';") log in
            button.nav__el.nav__el-cta sign up  